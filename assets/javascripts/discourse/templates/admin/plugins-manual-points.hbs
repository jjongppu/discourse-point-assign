<div class="manual-points">
  <form id="manual-points-form">
    <div class="input-group">
      <label for="user-id">User ID:</label>
      <input id="user-id" type="text" name="user_id" required>
    </div>

    <div class="input-group">
      <label for="points">Points:</label>
      <input id="points" type="number" name="points" required>
    </div>

    <div class="input-group">
      <label for="reason">Reason:</label>
      <input id="reason" type="text" name="reason" required>
    </div>

    <button type="submit" class="btn btn-primary">Grant Points</button>
  </form>
</div>