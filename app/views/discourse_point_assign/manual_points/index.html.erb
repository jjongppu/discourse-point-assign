<div class="manual-points">
  <form id="manual-points-form">
    <div>
      <label>User ID:</label>
      <input type="text" name="user_id" required>
    </div>
    <div>
      <label>Points:</label>
      <input type="number" name="points" required>
    </div>
    <div>
      <label>Reason:</label>
      <input type="text" name="reason" required>
    </div>
    <button type="submit">Grant Points</button>
  </form>
</div>
